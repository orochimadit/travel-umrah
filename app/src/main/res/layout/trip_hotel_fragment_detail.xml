<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Hotel :"
                android:textStyle="bold"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/nama_hotel_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="TITLE"/>
        </LinearLayout                 >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Booking :"
                android:textStyle="bold"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/tanggal_booking_hotel_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="overview....."
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal checkin :"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tgl_checkin_hotel_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="overview....."
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leng of stay :"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/los_hotel_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="overview....."
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Checkout :"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tgl_checkout_hotel_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="overview....."
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Mobile:"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/contact_mobile_hotel_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="overview....."
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact email:"
                android:textSize="15dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/contact_email_hotel_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="overview....."
                />
        </LinearLayout>





    </LinearLayout>
</ScrollView>


























